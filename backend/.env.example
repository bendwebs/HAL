# Environment Configuration
MONGODB_URI=mongodb://localhost:27017/
DATABASE_NAME=hal
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRATION_HOURS=24

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_CHAT_MODEL=qwen2.5:7b
DEFAULT_EMBED_MODEL=nomic-embed-text

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# Agent Limits
MAX_AGENT_DEPTH=3
MAX_CONCURRENT_AGENTS=8

# Web Search (Tavily)
# Get your API key from https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# YouTube API
# Get your API key from https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in your project
YOUTUBE_API_KEY=your_youtube_api_key_here

# Speech-to-Text (faster-whisper)
# Model sizes: tiny, base, small, medium, large-v2, large-v3, large-v3-turbo
# large-v3-turbo is recommended: ~4x faster than large-v3 with similar accuracy
# Device: cuda (GPU) or cpu
# Compute type: float16 (GPU), int8 (CPU), int8_float16
WHISPER_MODEL_SIZE=large-v3-turbo
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16

# Stable Diffusion (Automatic1111 / SD.Next / ComfyUI with API)
# Make sure to start your SD server with --api flag
# Example: ./webui.sh --api
SD_API_URL=http://127.0.0.1:7860
SD_DEFAULT_STEPS=20
SD_DEFAULT_CFG=7.0
SD_DEFAULT_SAMPLER=DPM++ 2M Karras
